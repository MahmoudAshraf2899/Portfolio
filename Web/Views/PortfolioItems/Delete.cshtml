@model Core.Entities.PortfolioItem

@{
    ViewData["Title"] = "Delete";
}

<div style="margin:68px 180px; margin-bottom:-50px; padding:93px;">
    <div>
         
        <dl class="row">
            <dt style="padding-bottom:31px;" class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProjectName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProjectName)
            </dd>
            <dt style="padding-bottom:31px;" class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt style="padding-bottom:31px;" class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImageUrl)
            </dt>
            <dd style="padding-bottom:31px;" class="col-sm-10">
                <img src="~/img/portfolio/@Model.ImageUrl" class="rounded" style="width:200px; height:140px;" />
            </dd>
        </dl>
        <h4 style="color:#3f3b3b;">Are you sure you want to delete this?</h4>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> ||
            <a asp-action="Index" class="btn btn-danger" style="background-color: #946b6b; border-color: #946b6b; text-decoration:unset;">Back to List</a>
        </form>
    </div>
</div>
